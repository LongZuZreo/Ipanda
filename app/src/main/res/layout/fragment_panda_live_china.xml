<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/mLinear">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <android.support.design.widget.TabLayout
        android:id="@+id/mTab"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        app:tabTextColor="#000000"
        app:tabSelectedTextColor="#0000FF"
        >
    </android.support.design.widget.TabLayout>
    <ImageView
        android:id="@+id/add_Image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/live_china_add"/>
    </LinearLayout>
    <com.androidkun.PullToRefreshRecyclerView
        android:id="@+id/mPullToRefreshRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></com.androidkun.PullToRefreshRecyclerView>
</LinearLayout>